	      <InputData Lumi="1" NEventsMax="-1" Type="DATA" Version="SingleMuon2018_RunD_TrimMassTriggerTest_2018" Cacheable="False">
          <!--<In FileName="/pnfs/desy.de/cms/tier2/store/user/akaravdi/RunII_102X_v1_ProductionMarch19/SingleMuon2018_ljetconsts/Run2018D/DATA_SingleMuon_Run2018D_9979_Ntuple.root" Lumi="0.0"/>-->
          &SingleMuon2018_RunD;
          <InputTree Name="AnalysisTree" />
          <OutputTree Name="AnalysisTree" />
        </InputData>


        <UserConfig>
            <!-- define which collections to read from the input. Only specify what you need to save I/O time -->
	    <Item Name="PrimaryVertexCollection" Value="offlineSlimmedPrimaryVertices"/>
	    <Item Name="ElectronCollection"      Value="slimmedElectronsUSER"/>
	    <Item Name="PhotonCollection"        Value="slimmedPhotonsUSER"/>
	    <Item Name="MuonCollection"          Value="slimmedMuonsUSER"/>
	    <Item Name="JetCollection"           Value="jetsAk4Puppi"/>
